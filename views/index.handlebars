<div id="main-div">
<h1>EAT DA BURGER</h1>

<div id="add-burger">
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="name"></label>
    <input type="text" id="name" name="name" size="30">
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>

<h2>Burgers that I want to eat:</h2>

<ol>
  {{#each burgers}}
    {{#unless devoured}}
    <li>
        <p>{{burger_name}} <button class="devour" data-id="{{id}}" type="submit">Devour {{burger_name}}</button></p>

    </li>
    {{/unless}}
  {{/each}}
</ol>

<h2>Burgers that I devoured:</h2>

<ol>
  {{#each burgers}}
    {{#if devoured}}
      <li>
          <p>{{burger_name}}</p>
      </li>
    {{/if}}
  {{/each}}
</ol>
</div>
